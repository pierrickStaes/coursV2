@model Venezia.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mark)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mark)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FuelTypeID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FuelType.Label)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autonomous)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autonomous)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <button class="btn btn-primary" id="btn_add_car">Ajouter au panier</button>
</div>

@section SectionScripts{ 
    <script>
        $(document).ready(() => {
            $("#btn_add_car").click(() => {
                $.ajax({
                    url: '/basket/AddCarToBasket',
                    method: 'POST',
                    dataType: 'json',
                    data: { idCar: @Model.ID},
                    success: (obj) => {
                        console.log(obj);
                    },
                    error: (err) => {
                        console.warn(err);
                    }
                });
            });
        })
    </script>
}
